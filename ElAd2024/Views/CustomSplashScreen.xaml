<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ElAd2024.Views.CustomSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black"
    >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ProgressRing x:Name="progressRing" IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" Height="100" Width="100"/>
            <Image Source="ms-appx:///Assets/SplashScreen.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="400" Margin="0,0,0,50"/>
            <TextBlock x:Name="Current" Text="{x:Bind Progress, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" FontWeight="Bold" Foreground="LightBlue" />

        </StackPanel>
    </Grid>
</Page>
