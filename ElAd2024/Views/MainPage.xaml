<Page
    x:Class="ElAd2024.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ElAd2024.ViewModels"
    xmlns:models="using:ElAd2024.Models"
    xmlns:telerikDataVisualization="using:Telerik.UI.Xaml.Controls.DataVisualization"
    xmlns:telerikChart="using:Telerik.UI.Xaml.Controls.Chart"
    xmlns:telerikCharting="using:Telerik.Charting"
    xmlns:converters="using:ElAd2024.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        
        <converters:FloatToTemperatureStringConverter x:Key="FloatToTemperatureStringConverter"/>
        <converters:FloatToHumidityStringConverter x:Key="FloatToHumidityStringConverter"/>
        <DataTemplate x:Key="AvailableSerialPortsListViewTemplate" x:DataType="models:SerialPortInfo">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ellipse -->
                <Ellipse x:Name="Ellipse"
                 Grid.RowSpan="2"
                 Width="32"
                 Height="32"
                 Margin="6"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}"/>

                <!-- TextBlock for the letter 'C' -->
                <TextBlock Grid.RowSpan="2"
                           Margin="0 0 2 10"
                   Width="25"
                   Height="25"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="{x:Bind PortNumber}"
                   Foreground="DarkSlateGray"
                   FontSize="24"
                   FontWeight="Bold"
                   TextAlignment="Center"/>

                <!-- Other TextBlocks -->
                <TextBlock Grid.Column="1"
                   Text="{x:Bind Name}"
                   x:Phase="1"
                   Style="{ThemeResource BaseTextBlockStyle}"
                   Margin="12,6,0,0"/>
                <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Text="{x:Bind BaudRate}"
                   x:Phase="2"
                   Style="{ThemeResource BodyTextBlockStyle}"
                   Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <!-- To create this sample, add/change the following properties onto the code for the base example above: -->
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Grid Margin="0 0 50 0" Width="300" Height="250">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Temperature" HorizontalAlignment="Center"/>
                    <telerikDataVisualization:RadRadialGauge MaxValue="50" LabelStep="10" TickStep="0" Margin="0 60 0 0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LabelRadiusScale="1.3">
                        <telerikDataVisualization:RadRadialGauge.LabelTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="15" Foreground="{ThemeResource TelerikGauge_RangeForegroundBrush}" Margin="0 0 10 10"/>
                            </DataTemplate>
                        </telerikDataVisualization:RadRadialGauge.LabelTemplate>
                        <telerikDataVisualization:RadialBarGaugeIndicator Value="50" Thickness="35" Brush="{ThemeResource TelerikGauge_MainIndicatorBackgroundBrush}"/>
                        <telerikDataVisualization:RadialBarGaugeIndicator Value="{x:Bind ViewModel.Temperature, Mode=OneWay}" IsAnimated="True" Brush="{ThemeResource TelerikGauge_GoodBackgroundBrush}" Thickness="35"/>
                    </telerikDataVisualization:RadRadialGauge>
                    <TextBlock Text="{x:Bind ViewModel.Temperature, Mode=OneWay, Converter={StaticResource FloatToTemperatureStringConverter}}" FontSize="20" Grid.Row="1" Margin="0 40 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
                <Grid Margin="0 0 50 0" Width="300" Height="250">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Humidity" HorizontalAlignment="Center"/>
                    <telerikDataVisualization:RadRadialGauge MaxValue="100" LabelStep="20" TickStep="0" Margin="0 60 0 0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LabelRadiusScale="1.3">
                        <telerikDataVisualization:RadRadialGauge.LabelTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="15" Foreground="{ThemeResource TelerikGauge_RangeForegroundBrush}" Margin="0 0 10 10"/>
                            </DataTemplate>
                        </telerikDataVisualization:RadRadialGauge.LabelTemplate>
                        <telerikDataVisualization:RadialBarGaugeIndicator Value="100" Thickness="35" Brush="{ThemeResource TelerikGauge_MainIndicatorBackgroundBrush}"/>
                        <telerikDataVisualization:RadialBarGaugeIndicator Value="{x:Bind ViewModel.Humidity, Mode=OneWay}" IsAnimated="True" Brush="{x:Bind ViewModel.HumidityBrush, Mode=OneWay}" Thickness="35"/>
                    </telerikDataVisualization:RadRadialGauge>
                    <TextBlock Text="{x:Bind ViewModel.Humidity, Mode=OneWay, Converter={StaticResource FloatToHumidityStringConverter}}" FontSize="20" Grid.Row="1" Margin="0 40 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

            </StackPanel>


            <telerikChart:RadCartesianChart PaletteName="DefaultDark" Height="300" x:Name="myChart">

                <telerikChart:SplineSeries x:Name="myChartSerie1">

                    <telerikChart:SplineSeries.HorizontalAxis>
                        <telerikChart:DateTimeCategoricalAxis
                            VerticalLocation="Bottom"
                            Foreground="#FFF"
                            LabelFormat="{}{0:hh:mm:ss}"/>
                    </telerikChart:SplineSeries.HorizontalAxis>

                    <telerikChart:SplineSeries.VerticalAxis>
                        <telerikChart:LinearAxis
                            HorizontalLocation="Right"
                            Foreground="#1E98E4"
                            Minimum="30"
                            Maximum="45"/>
                    </telerikChart:SplineSeries.VerticalAxis>

                    <telerikChart:SplineSeries.CategoryBinding>
                        <telerikChart:PropertyNameDataPointBinding PropertyName="Category"/>
                    </telerikChart:SplineSeries.CategoryBinding>

                    <telerikChart:SplineSeries.ValueBinding>
                        <telerikChart:PropertyNameDataPointBinding PropertyName="HumidityValue"/>
                    </telerikChart:SplineSeries.ValueBinding>

                </telerikChart:SplineSeries>

                <telerikChart:SplineSeries x:Name="myChartSerie2" Stroke="#FFC500">

                    <telerikChart:SplineSeries.VerticalAxis>
                        <telerikChart:LinearAxis
                            HorizontalLocation="Left"
                            Foreground="#FFC500"
                            Minimum="20"
                            Maximum="26"/>
                    </telerikChart:SplineSeries.VerticalAxis>

                    <telerikChart:SplineSeries.CategoryBinding>
                        <telerikChart:PropertyNameDataPointBinding PropertyName="Category"/>
                    </telerikChart:SplineSeries.CategoryBinding>

                    <telerikChart:SplineSeries.ValueBinding>
                        <telerikChart:PropertyNameDataPointBinding PropertyName="TemperatureValue"/>
                    </telerikChart:SplineSeries.ValueBinding>

                    <telerikChart:SplineSeries.PointTemplate>
                        <DataTemplate>
                            <Ellipse Width="20" Height="20"/>
                        </DataTemplate>
                    </telerikChart:SplineSeries.PointTemplate>

                </telerikChart:SplineSeries>

            </telerikChart:RadCartesianChart>

        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="Arduino Serial Port"
               Margin="0,0,0,10"
               FontSize="20"
               FontWeight="SemiBold"/>
            
            <ListView
             
            ItemsSource="{x:Bind ViewModel.AvailablePorts, Mode=OneTime}"
            SelectionMode="Single"
            ItemTemplate="{StaticResource AvailableSerialPortsListViewTemplate}"
            SelectedItem="{x:Bind ViewModel.SelectedSerialPortInfo, Mode=TwoWay}"/>

            <Grid Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Connect" Command="{x:Bind ViewModel.ConnectArduinoCommand}"
                        Width="140"/>
                <Button Grid.Column="1" Content="Disconnect" Command="{x:Bind ViewModel.DisconnectArduinoCommand}"
                        Width="140"/>
            </Grid>
                
            

            <TextBox
                       Margin="0 20 0 0"

            Text="{x:Bind ViewModel.TextToSend, Mode=TwoWay}"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            PlaceholderText="Enter text to send"/>

            <Button
                Margin="0 20 0 0"
                Width="140"
                HorizontalAlignment="Right"
            Content="Send"
            Command="{x:Bind ViewModel.SendDataCommand}"/>

            <TextBox
                Margin="0 20 0 0"
                Height="200"
            Text="{x:Bind ViewModel.ReceivedText, Mode=OneWay}"
            IsReadOnly="True"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            PlaceholderText="Received data"/>
        </StackPanel>

        <!-- DataTemplate used: -->


    </Grid>
</Page>
